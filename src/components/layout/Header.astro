---
import { config } from "@/config/main";

import { cn } from "@/lib/utils";

import { Icon } from "astro-icon/components";
import { Button } from "@/components/ui/button";

import { HeaderNav } from "@/components/layout/HeaderNav";
import { Input } from "../ui/input";
---

<header
  class={cn(
    "col-[fullbleed]",
    "grid grid-cols-subgrid",
    "bg-[#364A60] text-white",
    "py-2",
    "text-xl",
  )}
>
  <div class="flex justify-between md:hidden col-[fullbleed] pl-4 pr-6">
    <div class="flex gap-4 items-center">
      <Icon name="lucide:menu" />
      <img alt="logo" src="/logo.png" class="h-16" />
    </div>
    <div class="flex gap-4 items-center">
      <Icon name="fa6-solid:magnifying-glass" />
      <Icon name="fa6-solid:bag-shopping" />
    </div>
  </div>

  <div class="hidden md:grid grid-cols-subgrid col-[content] gap-4">
    <div class={cn("col-[fullbleed]", "grid grid-cols-[1fr_1fr_1fr]")}>
      <img alt="logo" src="/logo.png" class="h-16" />
      <div class="flex gap-2 items-center">
        <Input type="search" placeholder="¿Qué buscás?" />
        <Icon name="fa6-solid:magnifying-glass" />
      </div>
    </div>
    <div
      class={cn(
        "col-[fullbleed]",
        "justify-between items-center",
        "flex",
        "pr-4"
      )}
    >
      <HeaderNav client:only="react" />
      <Icon name="fa6-solid:bag-shopping" class={""} />
    </div>
  </div>
</header>
