---
import { config as mainConfig } from "@/config/main";
import { config as pageConfig } from "@/config/pages/products";
const config = {
  main: mainConfig,
  page: pageConfig,
};

import { cn } from "@/lib/utils";

import Layout from "@/layouts/Layout.astro";
import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";

import Content from "@/components/section/Content.astro";
import Content80 from "@/components/section/new/Content80.astro";
import HalfAndHalf from "@/components/section/HalfAndHalf.astro";
import ProportionalBento from "@/components/section/new/ProportionalBento.astro";

import Hero from "@/components/section/new/Hero.astro";

import { Icon } from "astro-icon/components";
import { Button } from "@/components/ui/button";
import { Accordion } from "@/components/my-ui/accordion";
import { LogoBelt } from "@/components/section/new/LogoBelt";
---

<Layout title={config.main.shortTitle} class={cn("w-full")}>
  <Header />

  <main class={cn("col-[fullbleed]", "grid grid-cols-subgrid")}>
    <Hero title="Products" />

    <ProportionalBento
      title={config.page.products.liquidLubricants.item.title}
      items={config.page.products.liquidLubricants.items.map((product) => ({
        title: product.title,
        subtitle: product.shortDescription,
        description: product.mediumDescription,
      }))}
      rows={[2, 3]}
    />

    <ProportionalBento
      title={config.page.products.greases.item.title}
      items={config.page.products.greases.items.map((product) => ({
        title: product.title,
        subtitle: product.shortDescription,
        description: product.mediumDescription,
      }))}
      rows={[3, 3, 3]}
    />
  </main>

  <Footer />
</Layout>
